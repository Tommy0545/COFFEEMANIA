<h1>
  <b>
    Beans Post List
  </b>
</h1>
<table class="table" >
  <thead>
    <tr>
      <th>User</th>
      <th>Beans Name</th>
      <th>Origin</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @beans.each do |bean| %>
      <tr>
        <td><%= link_to bean.user.user_name, user_path(bean.id) %></td>
        <td><%= link_to bean.beans_name,bean_path(bean.id) %></td>
        <td><%= bean.origin %></td>
        <td><%= link_to "#{bean.bean_comment.count} Comment", bean_path(bean.id) %></td>
      </tr>
    <% end %>
  </tbody>

</table>