<div class="container">
 <div align="center">
  <h1>Log in</h1>
    <h3 class="text-danger"><%= flash[:error] %></h3>
    <div class="mt-3">
      <h7>Log in here.</h7>
    </div>

     <%= form_with model: @user, url: user_session_path  do |f| %>
      <div class="field mt-3">
        <td>Email</td><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mt-3">
        <td>Password</td><br>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "Log in" %>
      </div>
     <% end %>

      <div class="mt-4">
        <h4>If not already registered</h4>
        <h4>Please<%= link_to "Sign up",new_user_registration_path %></u>from here.</h4>
      </div>
  </div>
</div>