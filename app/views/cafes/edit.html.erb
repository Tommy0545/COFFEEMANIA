<div class="container px-5 px-sm-0">
  <h1>
    <b>
      カフェ編集画面
    </b>
  </h1>

  <table class="table table-hover table-inverse">
        <%= form_with model: @cafe do |f| %>
          <div class="form-group">
            <label for="image">画像アップロード</label><br>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="store_name">店舗名</label><br>
            <%= f.text_field :store_name %>
          </div>
          <div class="form-group">
            <label for="location">所在地</label><br>
            <%= f.text_field :location %>
          </div>
          <div class="form-group">
            <label for="introduction">紹介</label><br>
            <%= f.text_area :introduction %>
          </div>
          <div class="form-group">
            <label for="site_url">サイトURL</label><br>
            <%= f.text_field :site_url %>
          </div>
          <div class="form-group">
            <%= f.submit '保存',class: "btn btn-success" %>
            <%= link_to '戻る', cafe_path(@cafe.id), class: "btn btn-primary" %>
          </div>
        <% end %>
  </table>
</div>
