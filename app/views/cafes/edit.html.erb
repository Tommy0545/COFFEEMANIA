<div class="container px-5 px-sm-0">
  <h1>
    <b>
      Cafe Edit
    </b>
  </h1>

  <table class="table table-hover table-inverse">
        <%= form_with model: @cafe do |f| %>
          <div class="form-group">
            <label for="image">Cafe Image</label><br>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="store_name">Store Name</label><br>
            <%= f.text_field :store_name %>
          </div>
          <div class="form-group">
            <label for="location">Location</label><br>
            <%= f.text_field :location %>
          </div>
          <div class="form-group">
            <label for="introduction">Introduction</label><br>
            <%= f.text_area :introduction %>
          </div>
          <div class="form-group">
            <label for="site_url">Site URL</label><br>
            <%= f.text_field :site_url %>
          </div>
          <div class="form-group">
            <%= f.submit 'SUBMIT',class: "btn btn-success" %>
            <%= link_to 'BACK', cafe_path(@cafe.id), class: "btn btn-primary" %>
          </div>
        <% end %>
  </table>
</div>
