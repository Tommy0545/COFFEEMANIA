<div class="container">
 <div align="center">
  <h1>
    <b>
      Cafe Post
    </b>
  </h1>

  <div class="table table-hover table-inverse">
        <%= form_with model: @cafe,url: cafes_path do |f| %>
          <div class="form-group">
            <td>Cafe Image</td><br>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </div>
          <div class="form-group">
            <td>Store Name</td><br>
            <td><%= f.text_field :store_name %></td>
          </div>
          <div class="form-group">
            <td>Location</td><br>
            <td><%= f.text_field :location %></td>
          </div>
          <div class="form-group">
            <td>Introduction</td><br>
            <td><%= f.text_area :introduction %></td>
          </div>
          <div class="form-group">
            <td>Site URL</td><br>
            <td><%= f.text_field :site_url %></td>
          </div>
          <div class="form-group">
            <%= f.submit 'POST',class: "btn btn-success" %>
          </div>
        <% end %>
  </div>
 </div>
</div>