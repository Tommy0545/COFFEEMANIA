<h1>
  <b>
    カフェ投稿一覧
  </b>
</h1>
<table class="table" >
  <thead>
    <tr>
      <th>User</th>
      <th>Store Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cafe.each do |cafe| %>
      <tr>
        <td><%= link_to cafe.user.user_name, user_path(cafe.user.id) %></td>
        <td><%= link_to cafe.store_name,cafe_path(cafe.id) %></td>
        <td><%= cafe.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>


