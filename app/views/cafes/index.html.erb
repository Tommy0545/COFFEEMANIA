<h1>
  <b>
    Cafe Post List
  </b>
</h1>
<table class="table" >
  <thead>
    <tr>
      <th>User</th>
      <th>Store Name</th>
      <th>Location</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @cafes.each do |cafe| %>
      <tr>
        <td><%= link_to cafe.user.user_name, user_path(cafe.id) %></td>
        <td><%= link_to cafe.store_name,cafe_path(cafe.id) %></td>
        <td><%= cafe.location %></td>
        <td><%= link_to "#{cafe.cafe_comments.count} Comment", cafe_path(cafe.id) %></td>
      </tr>
    <% end %>
  </tbody>

</table>


