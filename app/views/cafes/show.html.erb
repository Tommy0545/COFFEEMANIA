<div class="container px-5 px-sm-0">
  <h1>カフェ投稿詳細</h1>

  <table class="table table-hover table-inverse">
    <div class="form-group">
      <label for="image"></label><br>
        <%= image_tag @cafe.get_image,size: '400x300' %>
    </div>
    <div class="form-group">
      <label for="store_name">店舗名</label>
        <b><%= @cafe.store_name %></b>
    </div>
    <div class="form-group">
      <label for="location">所在地</label>
        <b><%= @cafe.location %></b>
    </div>
    <div class="form-group">
      <label for="introduction">紹介</label>
        <b><%= @cafe.introduction %></b>
    </div>
    <div class="form-group">
      <label for="site_url">サイトURL</label>
        <b><%= @cafe.site_url %></b>
    </div>

    <% if @cafe.user == current_user %>
      <%= link_to "削除", cafes_path(@cafe), method: :delete, class: "btn btn-danger" %>
    <% end %>

  </table>
</div>